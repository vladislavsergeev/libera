<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="AP" prefHeight="175.0" prefWidth="280.0" styleClass="AP" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="task.TaskController">
    <stylesheets>
        <URL value="@task.css" />
    </stylesheets>
   <children>
      <Label fx:id="id" textFill="TRANSPARENT" />
      <VBox prefHeight="175.0" prefWidth="280.0">
         <children>
            <JFXButton onAction="#delete" prefHeight="25.0" prefWidth="69.0" text="Удалить">
               <font>
                  <Font name="Candara Italic" size="12.0" />
               </font>
            </JFXButton>
            <JFXTextArea fx:id="text" focusColor="#ffffff00" nodeOrientation="LEFT_TO_RIGHT" onKeyReleased="#editAction" prefHeight="185.0" prefWidth="280.0" promptText="Что Вы хотите сделать сегодня?" unFocusColor="#ffffff00">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <font>
                  <Font name="Lucida Sans Typewriter Regular" size="14.0" />
               </font>
            </JFXTextArea>
         </children>
      </VBox>
   </children>
</AnchorPane>
